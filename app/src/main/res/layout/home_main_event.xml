<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_main_event"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="4dp">

    <ImageView
        android:id="@+id/main_event_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_main_event"
        android:foregroundGravity="top"
        android:layout_gravity="top"
        android:paddingTop="0dp"
        android:scaleType="fitStart"/>

    <TextView
        android:id="@+id/main_event_text"
        android:layout_below="@id/main_event_image"
        android:layout_width="171dp"
        android:layout_height="66dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Main Event"
        android:layout_marginStart="20dp"
        android:layout_gravity="bottom"
        android:gravity="top"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/main_event_text2"
        android:layout_below="@id/main_event_image"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="25 Oct / 9.00am"
        android:layout_gravity="bottom"
        android:layout_marginStart="22dp"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textSize="14sp"/>


</android.support.v7.widget.CardView>